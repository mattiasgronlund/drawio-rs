{
  "name": "drawio-rs devcontainer",
  "dockerComposeFile": "docker-compose.yml",
  "service": "workspace",
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "containerEnv": {
        "GIT_EDITOR": "vi"
      },
      "chat.disableAIFeatures": true,
      "extensions": [
        //"${containerWorkspaceFolder}/.vscode/drawio-1.9.0-6.vsix",
        //"${containerWorkspaceFolder}/.vscode/vscode-text-util-0.0.1.vsix",
        "ms-azuretools.vscode-containers",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "github.vscode-github-actions",
        "openai.chatgpt",
        "ryanluker.vscode-coverage-gutters"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false,
      "disableIp6tables": true
    }
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "remoteUser": "vscode",
  "containerEnv": {
    "WORKSPACE_FOLDER": "${containerWorkspaceFolder}",
    "WORKSPACE_FOLDER_BASENAME": "${containerWorkspaceFolderBasename}"
  },
  "remoteEnv": {
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}"
  }
}